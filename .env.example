# SendCraft Environment Variables
# Copie este ficheiro para .env e ajuste os valores

# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=development
SECRET_KEY=your-secret-key-here-change-in-production

# Database
DATABASE_URL=sqlite:///sendcraft.db

# SendCraft Configuration
DEFAULT_FROM_NAME=SendCraft
ENCRYPTION_KEY=your-32-byte-encryption-key-here

# SMTP Defaults
DEFAULT_SMTP_SERVER=smtp.antispamcloud.com
DEFAULT_SMTP_PORT=587
DEFAULT_USE_TLS=true

# API Configuration
API_RATE_LIMIT=100/hour

# Logging
LOG_LEVEL=INFO
LOG_FILE=sendcraft.log